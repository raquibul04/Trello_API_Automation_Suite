	"item": [
		{
			"name": "Creating a new Board",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code should be 200', function(){",
							"    pm.response.to.have.status(200)",
							"})",
							"pm.test(\"Board should be created\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.name).to.eql(\"Postman Lesson\");",
							"});",
							"pm.test(\"The board should stay open\", function(){",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.closed).to.equal(false);",
							"})",
							"pm.test(\"Board should be initially private\", function(){",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.prefs.permissionLevel).to.equal(\"private\");",
							"})",
							"var jsonData = pm.response.json();",
							"pm.globals.set(\"boardId\",jsonData.id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
