		{
			"name": "Creating a new card",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status should be 200\", function(){\r",
							"    pm.response.to.have.status(200);\r",
							"})\r",
							"pm.test(\"Card name should be Learn Postman\", function(){\r",
							"    let jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.name).to.equal(\"Learn Postman\");\r",
							"})\r",
							"pm.test(\"The Learn Postman card should not be closed\", function(){\r",
							"    let jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.closed).to.equal(false);\r",
							"})\r",
							"pm.test(\"The card was created under the TODO list\", function(){\r",
							"    let jsonData = pm.response.json();\r",
							"    let todoList = pm.globals.get(\"listId\");\r",
							"    pm.expect(jsonData.idList).to.equal(todoList);\r",
							"})\r",
							"pm.test('The card is created under TODO list in the Postman Lesson board', function(){\r",
							"    let jsonData = pm.response.json();\r",
							"    let boardid = pm.globals.get(\"boardId\");\r",
							"    pm.expect(jsonData.idBoard).to.equal(boardid);\r",
							"})\r",
							"pm.test(\"The card should not have any votes or attachments\", function(){\r",
							"    let jsonData = pm.response.json();\r",
							"    pm.expect(jsonData.badges.votes).to.equal(0);\r",
							"    pm.expect(jsonData.badges.attachments).to.equal(0);\r",
							"})\r",
							"let jsonData = pm.response.json();\r",
							"pm.globals.set(\"cardId\",jsonData.id);\r",
							"\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
